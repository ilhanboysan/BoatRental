@model CreateBlogPostDto
@{
	ViewData["Title"] = "CreateBlogPost";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<br />
<br />
<br />
<br />
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Blog Yazıları</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Blog Yazısı Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlık</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
							<div class="form-group">
								<label for="Author">Yazar</label>
								<input type="text" class="form-control" asp-for="Author" id="Author">
							</div>
							<div class="form-group">
								<label for="Image">Görsel</label>
								<input type="text" class="form-control" asp-for="Image" id="Image">
							</div>
							<div class="form-group">
								<label for="Date">Tarih</label>
								<input type="text" class="form-control" asp-for="Date" id="Date">
							</div>
							<div class="form-group">
								<label for="Content">Metin İçeriği</label>
								<textarea class="form-control" asp-for="Content" id="Content"></textarea>
							</div>
							<div class="form-group">
								<label for="IsPublished">Yazı Yayında Olsun Mu ?</label>
								<input type="checkbox" class="form-check-input" asp-for="IsPublished" id="IsPublished">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Blog Yazısı Ekle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>
<br />
