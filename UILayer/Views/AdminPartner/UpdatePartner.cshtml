@model UpdatePartnerDto
@{
    ViewData["Title"] = "UpdatePartner";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<br />
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Partner İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Partner Güncelleme</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Partner Adı</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>
							<div class="form-group">
								<label for="Title">Görsel</label>
								<input type="text" class="form-control" asp-for="Image" id="Image">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Partner'i Güncelle</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>
