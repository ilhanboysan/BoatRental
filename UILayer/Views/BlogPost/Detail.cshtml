@model ResultBlogPostDto
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/DefaultLayout/_DefaultLayout.cshtml";
}

<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="blog-entry mb-5">
                        <img src="@Model.Image" alt="@Model.Title" class="img-fluid mb-4 rounded" />
                        <div class="meta mb-3">
                            <span><i class="fa-solid fa-calendar"></i> @Model.Date.ToString("dd MMM yyyy")</span> |
                            <span><i class="fa-solid fa-at"></i> @Model.Author</span>
                        </div>
                        <h2 class="mb-3">@Model.Title</h2>
                        <div class="blog-content">
                            @Html.Raw(Model.Content)
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
<script>
    //Navbar Sürekli awake moduna alma
    document.addEventListener("DOMContentLoaded", function () {
        var navbar = document.querySelector('.ftco_navbar');

        if (navbar) {
            navbar.classList.add('scrolled', 'awake');
        }

        // Scroll ile sınıfların değişmesini engelle
        window.removeEventListener('scroll', window.onscroll);

        // Eğer jQuery scroll kodu varsa onu da geçersiz kıl
        if (typeof $ !== "undefined") {
            $(window).off("scroll");
        }
    });
</script>


