<script>
    function scrollSlider(direction) {
        const slider = document.getElementById("imageSlider");
        const slide = slider.querySelector(".slide");
        const scrollAmount = slide.offsetWidth + 15;
        slider.scrollBy({
            left: direction * scrollAmount,
            behavior: 'smooth'
        });
    }
</script>


