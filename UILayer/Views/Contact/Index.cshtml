
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/DefaultLayout/_DefaultLayout.cshtml";
}

<body>
    <br />
    <section class="ftco-section contact-section">
        <div class="container">
            <div class="row d-flex mb-5 contact-info">
                <div class="col-md-4">
                    <div class="row mb-5">
                        <div class="col-md-12">
                            <div class="border w-100 p-4 rounded mb-2 d-flex">
                                <div class="icon mr-3">
                                    <span class="icon-map-o"></span>
                                </div>
                                <p><span>Adres</span>test Mah tes Cad. No:999 İç Kapı No:999 Muğla/Göcek</p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="border w-100 p-4 rounded mb-2 d-flex">
                                <div class="icon mr-3">
                                    <span class="icon-mobile-phone"></span>
                                </div>
                                <p><span>Telefon Numarası</span> <a>+90 000 000 00 00</a></p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="border w-100 p-4 rounded mb-2 d-flex">
                                <div class="icon mr-3">
                                    <span class="icon-envelope-o"></span>
                                </div>
                                <p><span>Mail Adresi</span> <a href="mailto:info@yoursite.com">	teknende.com</a></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 block-9 mb-md-5">
                    @if (TempData["Message"] != null)
                    {
                    <div class="alert alert-success">
                    @TempData["Message"]
                    </div>
                    }
                    <form asp-action="SendEmail" method="post" class="bg-light p-5 contact-form">
                    <h2>Bize Ulaşın</h2>
                    <h8>Aşağıdaki formu doldurarak bize mesajınızı iletebilirsiniz.</h8>
                    <div class="form-group">
                    <input type="text" name="Name" class="form-control" placeholder="Ad - Soyad" required>
                    </div>
                    <div class="form-group">
                    <input type="email" name="Email" id="email-field" class="form-control" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                    <input type="text" name="Subject" id="subject-field" class="form-control" placeholder="Konu" required>
                    </div>
                    <div class="form-group">
                    <textarea name="Message" id="message-field" cols="30" rows="7" class="form-control" placeholder="Mesajınız..." required></textarea>
                    </div>
                    <div class="form-group">
                    <input type="submit" value="Mesaj Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                    </form>

                 </div>
            </div>
           @*  GOOGLE HARİTALAR EKLEMEK İSTENİLİRSE
               <div class="row justify-content-center">
                <div class="col-md-12">
                    <div id="map" class="bg-white"></div>
                </div>
            </div> *@
        </div>
    </section>
</body>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Home")';
        }, 2000); // 2000 ms = 2 saniye
    </script>
}



<script>
    //Navbar Sürekli awake moduna alma
    document.addEventListener("DOMContentLoaded", function () {
        var navbar = document.querySelector('.ftco_navbar');

        if (navbar) {
            navbar.classList.add('scrolled', 'awake');
        }

        // Scroll ile sınıfların değişmesini engelle
        window.removeEventListener('scroll', window.onscroll);

        // Eğer jQuery scroll kodu varsa onu da geçersiz kıl
        if (typeof $ !== "undefined") {
            $(window).off("scroll");
        }
    });
</script>