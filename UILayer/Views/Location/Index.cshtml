@model List<ResultLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/DefaultLayout/_DefaultLayout.cshtml";
}
<style>
    * {
        box-sizing: border-box;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    html, body {
        width: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        color: #001c35;
        background-color: #ffffff;
        font-family: "Poppins", sans-serif;
    }

    h1 {
        font-size: 32px;
        font-style: italic;
        margin-bottom: 3rem;
    }

    h2 {
        font-size: 20px;
        margin: 0 0 1rem 0;
        line-height: 1.2;
        white-space: normal;
        overflow-wrap: break-word;
        text-overflow: ellipsis;
    }

    .card img {
        transition: transform 0.4s ease;
    }

        .card img:hover {
            transform: scale(1.1);
        }

    section {
        width: 100%;
        max-width: 1600px;
        padding: 4rem 1rem;
        margin: 0 auto;
    }

        section img {
            width: 100%;
            max-width: 520px;
            height: 100%;
            max-height: 400px;
            object-fit: cover;
            margin: 1rem 0;
            display: block;
            border-radius: 8px;
            transform-origin: center;
        }

    .card {
        width: 100%;
        max-width: 520px;
        padding: 16px;
        background-color: rgba(255, 255, 255, 0.1); /* yarı saydam beyaz */
        backdrop-filter: blur(10px); /* cam efekti */
        -webkit-backdrop-filter: blur(10px); /* Safari desteği */
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
        border: 1px solid rgba(255, 255, 255, 0.3); /* isteğe bağlı çerçeve */
    }


        .card h2, .card p {
            margin-bottom: 0.5rem;
        }

    .card-container {
        display: grid;
        background-color: transparent;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 16px;
    }

    .image-wrapper {
        position: relative;
        width: 100%;
        max-width: 520px;
        height: 300px; /* Sabit yükseklik */
        overflow: hidden; /* Taşan kısmı kırp */
        border-radius: 8px;
    }

        .image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Oranı bozmadan alanı doldurur */
            display: block;
        }


    .image-title {
        position: absolute;
        bottom: 10px;
        left: 16px;
        color: white;
        font-size: 20px;
        font-weight: 600;
        text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
    }


    @@media screen and (max-width: 580px) {
        .card-container {
            grid-template-columns: 1fr;
        }
    }

    @@keyframes scaleProgress {
        from {
            transform: scaleX(0);
        }

        to {
            transform: scaleX(100%);
        }
    }



    @@keyframes fade-in {
        from {
            opacity: 0.3;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./style.css">
</head>
<body>
    <br />
    <br />

    <div class="progress-bar"></div>
    <section>
        <h1 class="text-center">Lokasyonlar</h1>
        <p class="text-center" style="color:dimgray">Lokasyonlarımızda keşfedilmeyi bekleyen eşsiz yerleri bulun. Sakin koylarda yatınızı demirleyerek huzur dolu anlar yaşayın.<br /> Gizli koylardaki masmavi suları keşfedin ve doğanın güzelliklerini denizin kıyısında bulun.<br /> teknende.com'un sunduğu farklı lokasyonlarda unutulmaz deneyimler yaşayın.</p>
        <div class="card-container">
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="image-wrapper">
                        <a href="/Location/Detail/@item.Id">
                            <img src="@item.Image" alt="@item.Name" />
                        </a>
                        <div class="image-title">@item.Name</div>
                    </div>
                </div>
            }

        </div>
    </section>
</body>
<script>
    //Navbar Sürekli awake moduna alma
    document.addEventListener("DOMContentLoaded", function () {
        var navbar = document.querySelector('.ftco_navbar');

        if (navbar) {
            navbar.classList.add('scrolled', 'awake');
        }

        // Scroll ile sınıfların değişmesini engelle
        window.removeEventListener('scroll', window.onscroll);

        // Eğer jQuery scroll kodu varsa onu da geçersiz kıl
        if (typeof $ !== "undefined") {
            $(window).off("scroll");
        }
    });
</script>